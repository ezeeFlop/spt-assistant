# app/.env.example

PROJECT_NAME="Tara Voice Assistant - Gateway"

# Redis Settings
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_DB=0
# REDIS_PASSWORD=your_redis_password

# --- JWT Authentication Settings ---
# IMPORTANT: Change this to a strong, random secret key in your actual .env file!
JWT_SECRET_KEY="!!!REPLACE-THIS-WITH-A-STRONG-RANDOM-SECRET-KEY!!!"
JWT_ALGORITHM="HS256"
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440 # 24 hours

# Base URL for the frontend to connect to the WebSocket
# This is often configured in the frontend directly but can be useful here for reference
# or if the backend needs to construct full URLs for some reason.
# VITE_API_BASE_URL="ws://localhost:8000/api/v1/ws/audio"

# Logging Level (if you add logging configuration to the app)
# LOG_LEVEL=INFO