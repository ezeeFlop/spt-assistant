# VAD & STT Worker Configuration

# Redis Settings (MUST match gateway and other services)
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_DB=0
# REDIS_PASSWORD=

# Channels (Defaults are in vad_stt_worker/config.py. Uncomment to override, ensure consistency.)
# AUDIO_STREAM_CHANNEL="audio_stream_channel"  # Channel to subscribe to for audio from Gateway
# TRANSCRIPT_CHANNEL="transcript_channel"    # Channel to publish STT transcripts to
# BARGE_IN_CHANNEL="barge_in_notifications"  # Channel to publish VAD-detected barge-in events
# TTS_ACTIVE_STATE_PREFIX="tts_active_state:" # Redis key prefix for checking TTS active state (set by TTS service, read by VAD)

# VAD Settings (Defaults are in config.py, uncomment to override)
# VAD_MODEL_REPO="snakers4/silero-vad"
# VAD_MODEL_NAME="silero_vad"
# VAD_SAMPLING_RATE=16000 # Should be 16kHz as Whisper expects this
# VAD_THRESHOLD=0.5
# VAD_MIN_SILENCE_DURATION_MS=100
# VAD_SPEECH_PAD_MS=30

# STT Settings (faster-whisper)
# FR-03: faster-whisper with openai/whisper-large-v3 French fine-tune
STT_MODEL_NAME="Systran/faster-whisper-large-v3-french" # Or your preferred Whisper model for French
STT_DEVICE="cpu" # Options: "cpu", "cuda" (if NVIDIA GPU available and CUDA toolkit installed)
STT_COMPUTE_TYPE="int8" # Options: "float16", "int8", "int8_float16", "float32" (trade-off speed/accuracy/size)
# STT_BEAM_SIZE=5
# STT_LANGUAGE="fr" # Should match the model if it's language-specific, or for multilingual models
# STT_PARTIAL_TRANSCRIPT_INTERVAL_MS=300

# Logging Level (Optional - default is typically INFO or DEBUG in logging_config.py)
LOG_LEVEL="INFO"